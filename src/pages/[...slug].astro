---
import "@fontsource-variable/inter";
import { ClientRouter } from "astro:transitions";
import { Chart } from "../components/Chart";
import { Input } from "../components/Input";
import { Settings } from "../components/Settings";
import { getChartData } from "../lib/chart-data";
import "../styles/global.css";

export const prerender = false;

const { slug } = Astro.params;
const packages = slug ? slug.split("+") : [];
const chartData = await getChartData(packages);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>
      {
        packages.length == 0
          ? "PyPI Trends"
          : `${packages.join(", ")} | PyPI Trends`
      }
    </title>

    <script is:inline>
      const theme = localStorage.getItem("theme") ?? "device";
      const deviceThemeIsDark = window.matchMedia(
        "(prefers-color-scheme: dark)",
      ).matches;
      if (theme === "dark" || (theme === "device" && deviceThemeIsDark)) {
        document.documentElement.classList.add("dark");
      }
      localStorage.setItem("theme", theme);
    </script>

    <ClientRouter />
  </head>
  <body class="bg-zinc-100 text-zinc-900 dark:bg-zinc-800 dark:text-zinc-100">
    <div class="mx-auto max-w-5xl p-4">
      <div class="flex items-center justify-between">
        <h1 class="text-2xl">
          <a class="font-light underline-offset-4 hover:underline" href="/">
            PyPI Trends
          </a>
        </h1>
        <Settings client:only="react" />
      </div>
      <Input client:load packages={packages} />
      <Chart client:load data={chartData} packages={packages} />
    </div>
  </body>
</html>
